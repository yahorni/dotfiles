#!/bin/bash

side=${1:-+}
value=${2:-15}
param=${3:-x}

[ "$side" != "+" -a "$side" != "-" ] && exit 1
[ "$param" != "x" -a "$param" != "y" ] && exit 1

pid=$(xdotool getwindowfocus)

eval $(xwininfo -id $(xdotool getactivewindow) |
    sed -n -e "s/^ \+Absolute upper-left X: \+\([0-9]\+\).*/pos_x=\1/p" \
              -e "s/^ \+Absolute upper-left Y: \+\([0-9]\+\).*/pos_y=\1/p" )
case $param in
    x) pos=$pos_x ;;
    y) pos=$pos_y ;;
esac
if [ "$side" = "+" ]; then
    pos="$(($pos + $value))"
elif [ "$side" = "-" ]; then
    pos="$(($pos - $value))"
fi
case $param in
    x) pos_x=$pos ;;
    y) pos_y=$pos ;;
esac
xdotool windowmove $pid $pos_x $pos_y
