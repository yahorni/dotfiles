#!/bin/bash

side=${1:-+}
value=${2:-5}
param=${3:-w}

[ "$side" != "+" -a "$side" != "-" ] && exit 1
[ "$param" != "w" -a "$param" != "h" ] && exit 1

pid=$(xdotool getwindowfocus)

increase() { echo $(($1 * (100 + $value) / 100)) ; }
decrease() { echo $(($1 * (100 - $value) / 100)) ; }

eval "`xdotool getwindowgeometry --shell $pid`"

case $param in
    w) size=$WIDTH ;;
    h) size=$HEIGHT ;;
esac
if [ "$side" = "+" ]; then
    size=`increase $size`
elif [ "$side" = "-" ]; then
    size=`decrease $size`
fi
case $param in
    w) WIDTH=$size ;;
    h) HEIGHT=$size ;;
esac
xdotool windowsize $pid $WIDTH $HEIGHT
