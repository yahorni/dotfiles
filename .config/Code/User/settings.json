{
    "vim.normalModeKeyBindings": [
    {
        "before": ["<Enter>"],
        "after": ["o", "<ESC>"]
    },
    {
        "before": ["S"],
        "after": ["i", "<Enter>", "<ESC>"]
    },
    {
        "before": ["g", "r"],
        "after": [":noh", "<Enter>"]
    },
    {
        "before": ["<Backspace>"],
        "after": ["i", "<Backspace>", "<ESC>", "l"]
    }
],
    "explorer.confirmDelete": false,
    "editor.fontSize": 18,
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.env.linux": {
        "DOTNET_ROOT": "/opt/dotnet",
        "PATH": "${env:PATH}:${env:HOME}/.dotnet/tools"
    }
}
