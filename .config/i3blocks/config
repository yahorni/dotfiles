# i3blocks config file
# vim: ft=dosini
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

[mpd]
interval=once
signal=9
command=i3mpd
separator=true

# [timer]
# label=Timer:
# interval=30
# command=i3timer
# separator=true

[volume]
interval=once
command=i3volume
signal=10
separator=true

[brightness]
interval=once
command=i3brightness
signal=11
separator=true

[memory]
label=mem
separator=false
interval=30

[cpu_usage]
label=cpu
interval=10
separator=true

[iface]
instance=wlp2s0
color=#00FF00
interval=10
separator=true

[battery]
command=i3battery
interval=15
separator=false

[temperature]
label=üå°Ô∏è
interval=15

[xkbmon]
command=i3language
signal=12
interval=3

[time]
command=date '+%Y-%m-%d %H:%M'
interval=60
