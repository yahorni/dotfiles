# NOTE: keys below reserved
# q/Q - kill window/wm
# shift+r - to update wm
# f - fullscreen
# h/j/k/l, comma, period, slash â€” for wm manipulation
# TODO: movefloat/resizefloat

# system/audio controls
super + {_,shift +}grave
    $TERMINAL -e {htop,pulsemixer}

# music player
super + w
    $TERMINAL -e ncmpcpp

# bar
super + shift + w
    xmouseless &>/dev/null

# terminal
super + {_,shift +} e
    $TERMINAL {_,-c dropdown}

# hotkey daemon restart
super + r
    pkill -USR1 -x sxhkd

# RSS
super + t
    $TERMINAL -e newsboat -q

# torrent
super + shift + t
    $TERMINAL -e tremc

super + {_,shift +} y
    dmenu_emoji {_,type}

# search web
super + {_,shift +} u
    searchweb {query,url}

# reload bar
super + shift + i
    case "$WMBAR" in \
        "dwmbar")   pkill -USR1 dwmbar ;; \
        "polybar")  pkill polybar ; setsid polybar -r notebar & ;; \
    esac

# english translator
super + {_,shift +} o
    translate.py -{s,d}n

# power management
super + {_, shift +} p
    powermanager {suspend,_}

# bookmarks
super + a ; {o,a,f,e,c,b}
    bookmarks.sh {open,addmark,addfolder,editmark,copy,_}

# notes
super + shift + a
    $TERMINAL -e bash -c "source /usr/share/nvm/init-nvm.sh ; joplin"

# bluetooth
super + {_, shift +} s
    sudo -A systemctl {start,stop} bluetooth

# program run
super + d
    dmenu_run

# program kill
super + shift + d
    fastkill

# attach floating window
super + {_, shift +} g
    cornerwindow {_,-H left}

# terminal
super + Return
    $TERMINAL
super + shift + Return
    samedir

# resize floating window with ratio
super + {_, shift +} z
    resizeratio {-,+} 5

# messengers
super + x
    telegram-desktop

# mail
super + shift + x
    $TERMINAL -e neomutt

# file managers
super + {_, shift +} v
    {_,FM=vifm} $TERMINAL -e fmrun.sh

# clipboard
super + c
    showselections
super + shift + c
    showcliphistory

# browser
super + b
    pgrep -fi $BROWSER || $BROWSER
super + shift + b
    $BROWSER

# mounting
super + {_, shift +} m
    dmenu_{_,un}mount

# music (keyboard)
super + {_,shift +} n
    mpc {toggle,stop}
super + {minus,equal}
    mpc {prev,next}
super + shift + {minus,equal}
    mpc seek {-,+}5

# music (audio buttons)
XF86Audio{Play,Pause,Stop}
    mpc {toggle,toggle,stop}
XF86Audio{Next,Prev}
    mpc {next,prev}
shift + XF86Audio{Next,Prev}
    mpc seek {+,-}10

# screenshots
Print
    makescreen
alt + Print
    makescreen window
@shift + Print
    makescreen part
