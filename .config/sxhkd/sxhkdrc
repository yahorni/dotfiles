# NOTE: keys below reserved
# q/Q - kill window/wm
# super+shift+r - to update wm
# f - fullscreen
# h/j/k/l, comma, period, slash â€” for wm manipulation
# TODO: movefloat/resizefloat

# system/audio controls
super + {_,shift +}grave
    $TERMINAL -e {htop,pulsemixer}

# music player
super + w
    $TERMINAL -e ncmpcpp -s browser

# terminal
super + {_,shift +} e
    $TERMINAL {_,-c dropdown}

# hotkey daemon restart
super + r
    pkill -USR1 -x sxhkd

# RSS
super + t
    $TERMINAL -e newsboat -q

# torrent
super + shift + t
    $TERMINAL -e transmission-remote-cli

# search web
super + {_,shift +} u
    searchweb {query,url}

# english translator
super + {_,shift +} o
    translate.py -{s,d}n

# bookmarks
super + a ; {o,a,f,e,c,b}
    bookmarks.sh {open,addmark,addfolder,editmark,copy,_}

# notes
super + shift + a
    $TERMINAL -e joplin

# power management
super + {_, shift +} p
    powermanager {suspend,_}

# programming
super + s
    openprj
super + shift + s
    $TERMINAL -c dropdown -e $EDITOR

# program run
super + d
    dmenu_run

# program kill
super + shift + d
    fastkill

# attach floating window
super + {_, shift +} g
    cornerwindow {_,-H left}

# terminal
super + Return
    $TERMINAL
super + shift + Return
    samedir

# resize floating window with ratio
super + {_, shift +} z
    resizeratio {-,+} 5

# messengers
super + x
    telegram-desktop
super + shift + x
    slack

# file manager
super + v
    $TERMINAL -e vifmrun

# mail
super + shift + v
    $TERMINAL -e neomutt

# clipboard
super + c
    showselections
super + shift + c
    clipmenu

# browser
super + b
    pgrep $BROWSER || $BROWSER
super + shift + b
    $BROWSER

# mounting
super + {_, shift +} m
    dmenu{_,un}mount

# music
super + {_,shift +} n
    mpc {toggle,stop}

super + {minus,equal}
    mpc {prev,next}

super + shift + {minus,equal}
    mpc seek {-,+}5

XF86Audio{Play,Stop}
    mpc {toggle,stop}

XF86Audio{Next,Prev}
    mpc {next,prev}

shift + XF86Audio{Next,Prev}
    mpc seek {+,-}10

# screenshots
Print
    makescreen
ctrl + Print
    makescreen window
@shift + Print
    makescreen part
