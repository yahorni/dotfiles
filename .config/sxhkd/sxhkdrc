super + grave
    $TERMINAL -e htop

super + w
    $TERMINAL -e ncmpcpp
super + shift + w
    bookmarks -a open

super + e
    $TERMINAL
super + shift + e
    $TERMINAL -e neomutt

super + t
    $TERMINAL -e newsboat -q
super + shift + t
    $TERMINAL -e transmission-remote-cli

super + p
    power_manager
super + shift + p
    fastkill

super + {_, shift +} bracketleft
    translate.py -{s,d}n

super + {_, shift +} bracketright
    dictionary {show,set}

super + backslash
    invert_colors

super + s
    $TERMINAL -e calcurse -D "$XDG_CONFIG_HOME"/calcurse
super + shift + s
    dictionary add

super + d
    dmenu_run

super + {_, shift +} g
    corner_window {_,-H left}

super + Return
    $TERMINAL
super + shift + Return
    samedir

super + c
    show_selections
super + shift + c
    clipmenu

super + v
    $TERMINAL -e vifmrun

super + b
    pgrep $BROWSER || $BROWSER
super + shift + b
    $BROWSER

super + m
    dmenu_mount
super + shift + m
    dmenu_umount

super + period
    $TERMINAL -n _dropdown_
super + shift + period
    dropdown

# screenshots
Print
    makescreen
ctrl + Print
    makescreen window
@shift + Print
    makescreen part

# music
super + {_,shift +} n
    mpc {toggle,stop}
super + {equal,minus}
    mpc {next,prev}
super + {plus,underscore}
    mpc seek {+,-}10
