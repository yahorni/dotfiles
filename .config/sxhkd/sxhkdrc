# Reserved keys
# super + {_,shift +} q                    | kill window/wm
# super + shift + r                        | to update wm
# super + f                                | fullscreen
# super + {_,shift +} {h,j,k,l}            | window navigation/manipulation
# super + {_,shift +} {comma,period,slash} | other window manipulations
# super + shift + Return                   | default terminal in WM

# system/audio controls
super + {_,shift +}grave
    $TERMINAL -e {htop,pulsemixer}

# NOTE: do not map 'super + shift + w' because you will definitely mistype to 'super + shift + q`
# music player
super + w
    supersonic-desktop

# terminal
super + {_,shift +} e
    $TERMINAL {_,-c dropdown}

# hotkey daemon restart
super + r
    pkill -USR1 -x sxhkd

# translator
super + t ; {e,f,r}
    translate.sh {'en:ru','fr:en','ru:en'}
# translator with voice
super + t ; shift + {e,f,r}
    translate.sh {'en:ru','fr:en','ru:en'} --speak
# translator with full description
super + shift + t ; {e,f,r}
    translate.sh {'en:ru','fr:en','ru:en'} --extended

# displays
super {_,shift +,alt +} y
    xdisplay.sh {2nd,same,left}

# recognize text from screenshot
super + u ; {e,r,u}
    img2txt.sh {eng,rus,eng+rus}

super + shift + u
    emoji.sh copy

# reload bar
super + shift + i
    pkill -USR1 dwmbar

# power management
super + {_, shift +} p
    power-manager.sh {suspend,_}

# notes
super + a ; {d,y,t,n,space}
    cd "$HOME/dox/notes" ; $TERMINAL -e nvim -c {"Journal","Journal yesterday","Journal tomorrow","FzfLua files","FzfLua search"}

# bluetooth
super + s; {b,k}
    sudo -A systemctl {start,stop} bluetooth
super + s; a
    blueman-applet

# vpn
super + s; {t,T}
    sudo -A systemctl start tailscaled && sudo -A tailscale {up,down} ; echo "vpn" >> /tmp/dwmbar.fifo

# program run
super + d
    rofi -show run

# program kill
super + shift + d
    kill-process.sh

# attach floating window
super + {_, shift +} g
    wm-corner-window.sh {_,-H left}

# terminal
super + Return
    same-dir.sh

# resize floating window with ratio
super + {_, shift +} z
    wm-resize-ratio.sh {-,+} 5

# messengers
super + x
    Telegram

# mouse
super + shift + x
    xmouseless &>/dev/null

# clipboard
super + c
    show-selections.sh
super + shift + c
    clipmenu

# file managers
super + {_, shift +} v
    {_,FM=vifm} $TERMINAL -e fm-run.sh

# browser
super + b
    pgrep -fi $BROWSER || $BROWSER
super + shift + b ; {b,q}
    {brave,qutebrowser}

# mounting
super + {_, shift +} m
    dev-{_,un}mount.sh

# playerctl controls
super + {_,shift +,alt +} n
    playerctl {play-pause,stop,-a pause}
super + {minus,equal}
    playerctl {previous,next}
super + shift + {minus,equal}
    playerctl position 5{-,+} ; echo "player" > /tmp/dwmbar.fifo

# mpc controls
# super + {_,shift +} n
#     mpc toggle ; echo "player" > /tmp/dwmbar.fifo
# super + {minus,equal}
#     mpc {prev,next} ; echo "player" > /tmp/dwmbar.fifo
# super + shift + {minus,equal}
#     mpc seek {-,+}5 ; echo "player" > /tmp/dwmbar.fifo

# audio buttons
XF86Audio{Play,Pause,Stop}
    playerctl {play-pause,play-pause,stop}
XF86Audio{Prev,Next}
    playerctl {previous,next}
shift + XF86Audio{Prev,Next}
    playerctl position 5{-,+}

# volume buttons
XF86Audio{Raise,Lower}Volume
    pamixer --{in,de}crease 5 --allow-boost
XF86AudioMute
    pamixer --toggle-mute

# screenshots
Print ; Print
    make-screenshot.sh
alt + Print
    make-screenshot.sh window
@shift + Print
    make-screenshot.sh part

# screen keyboard
super + alt + space
    onboard
