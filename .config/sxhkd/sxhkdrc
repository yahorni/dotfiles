# NOTE: keys below reserved
# 1. q/shift+q - kill window/wm
# 2. shift+r - to update wm
# 3. f - fullscreen
# 4. shift+[h/j/k/l] - wm windows manipulations
# 5. shift+[comma/period/slash] â€” other wm manipulations

# system/audio controls
super + {_,shift +}grave
    $TERMINAL -e {htop,pulsemixer}

# music player
super + w
    $TERMINAL -e ncmpcpp

# terminal
super + {_,shift +} e
    $TERMINAL {_,-c dropdown}

# hotkey daemon restart
super + r
    pkill -USR1 -x sxhkd

# RSS
super + t
    $TERMINAL -e newsboat -q

# torrent
super + shift + t
    $TERMINAL -e tremc

super + u
    dmenu_emojis.sh
super + shift + u
    $TERMINAL -e neomutt

# reload bar
super + shift + i
    case "$WMBAR" in \
        "dwmbar")   pkill -USR1 dwmbar ;; \
        "polybar")  pkill polybar ; setsid polybar -r notebar & ;; \
    esac

# english translator
super + {_,shift +} o
    translate.py -{s,d}n

# power management
super + {_, shift +} p
    powermanager {suspend,_}

# bookmarks
super + a ; {o,O,a,f,e,c,d,b}
    bookmarks.sh {open,open -o chromium,addmark,addfolder,editmark,copy,delmark,_}

# notes
super + shift + a
    $TERMINAL -e joplin

# bluetooth
super + s; {e,d}
    sudo -A systemctl {start,stop} bluetooth
super + s; {a,k}
    {_,pkill} blueman-applet

# program run
super + d
    dmenu_run

# program kill
super + shift + d
    fastkill

# attach floating window
super + {_, shift +} g
    cornerwindow {_,-H left}

# terminal
super + Return
    sd
super + shift + Return
    $TERMINAL

# resize floating window with ratio
super + {_, shift +} z
    resizeratio {-,+} 5

# messengers
super + x
    telegram-desktop

# mouse
super + shift + x
    xmouseless &>/dev/null

# file managers
super + {_, shift +} v
    {_,FM=vifm} $TERMINAL -e fmrun.sh

# clipboard
super + c
    showselections
super + shift + c
    showcliphistory

# browser
super + b
    pgrep -fi $BROWSER || $BROWSER
super + shift + b
    $BROWSER

# mounting
super + {_, shift +} m
    dmenu_{_,un}mount

# music (keyboard)
super + {_,shift +} + KP_Enter
    mpc {toggle,stop}
super + KP_{Subtract,Add}
    mpc {prev,next}
super + shift + KP_{Subtract,Add}
    mpc seek {-,+}5
# ---
super + {_,shift +} n
    playerctl {play-pause,stop}
super + {minus,equal}
    playerctl {previous,next}
super + shift + {minus,equal}
    playerctl position 5{-,+}
# ---
super + alt + {_,shift +} n
    playerctl pause ; playerctld {_,un}shift

# music (audio buttons)
XF86Audio{Play,Pause,Stop}
    playerctl {play-pause,play-pause,stop}
XF86Audio{Prev,Next}
    playerctl {previous,next}
shift + XF86Audio{Prev,Next}
    playerctl position 5{-,+}

# screenshots
Print
    makescreen
alt + Print
    makescreen window
@shift + Print
    makescreen part

# screen keyboard
super + alt + space
    onboard
