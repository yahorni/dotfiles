; vim: ft=gitconfig
;
; config uses tricks from:
; https://blog.gitbutler.com/how-git-core-devs-configure-git/
; https://www.youtube.com/watch?v=aolI_Rz0ZqY
; https://micahkepe.com/blog/gitconfig/
; https://jvns.ca/blog/2024/02/16/popular-git-config-options/
;
; to manage bare repo run:
; git config status.showUntrackedFiles no

[core]
	excludesfile = ~/.config/git/ignore
	pager = "diff-so-fancy | less --tabs=4 -RF"
[init]
	defaultBranch = master
[push]
	default = current
	autoSetupRemote = true
	followTags = true
[pull]
	ff = only
[interactive]
	diffFilter = "diff-so-fancy --patch"
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[credential]
	helper = cache --timeout=3600
[user]
	useConfigOnly = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	submodule = log
[help]
	autocorrect = prompt
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[merge]
	conflictstyle = zdiff3
[status]
	branch = true
	submoduleSummary = true
[url "git@github.com:"]
	insteadOf = "https://github.com/"
; [http]
; 	sslVerify = false
[alias]
	s = status --short
	ss = status
	a = add
	c = commit
	b = branch
	ch = checkout
	sw = switch
	r = remote
	rp = remote prune
	d = diff
	ds = diff --staged
	dw = diff --word-diff
	ps = push
	pf = push --force-with-lease
	pl = pull
	sh = show
	st = stash
	sta = stash --all
	cp = cherry-pick
	rs = reset
	rst = restore
	rb = rebase
	m = merge
	sb = submodule
	cl = clean -dfx
	l = log --oneline --graph
	lb = log --oneline --graph --branches
	la = log --oneline --graph --all
	l1 = log -1
	lf = log --full-history --
	hash = log -1 --pretty=format:"%H"
	hist = log --follow -p --
