# vim: ft=gitconfig
[core]
	excludesfile = ~/.config/git/ignore
[pull]
	ff = only
[init]
	defaultBranch = master
[push]
	default = current
[http]
	sslVerify = false
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[credential]
	helper = cache --timeout=3600

# To manage bare repo:
# git config status.showUntrackedFiles no
