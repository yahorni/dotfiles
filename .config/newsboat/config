bind-key x pb-delete
# bind-key ^t next-unread

color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     yellow
color listfocus_unread   black     yellow
color info               default   black
color article            default   default

highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default

browser linkhandler
macro t set browser "youtube-dl --add-metadata -ic -f bestvideo+bestaudio %u"; open-in-browser ; set browser linkhandler
macro y set browser "youtube-dl --add-metadata -f bestaudio[ext=m4a] -xic %u"; open-in-browser ; set browser linkhandler
macro c set browser "echo %u | xclip -selection clipboard"; open-in-browser ; set browser linkhandler
