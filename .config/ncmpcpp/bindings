# vim: ft=conf
# default bindings: /usr/share/doc/ncmpcpp/bindings

def_key "j"
    scroll_down

def_key "k"
    scroll_up

def_key "J"
    page_down

def_key "K"
    page_up

def_key "l"
    next_column

def_key "h"
    previous_column

def_key ";"
    show_lyrics

def_key "g"
    move_home

def_key "G"
    move_end

def_key "t"
    jump_to_position_in_song

def_key "D"
    delete_stored_playlist

def_key "D"
    delete_playlist_items

def_key "d"
    remove_selection

def_key "ctrl-v"
    reverse_selection

def_key "v"
    select_item

def_key "V"
    select_range
