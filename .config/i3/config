# vim: filetype=i3:set fdm=marker foldlevel=0:

set $mod Mod4

# Colors
client.focused          #4c7899 #285577 #ffffff #556b2f #00f0a0
client.focused_inactive #333333 #5f676a #ffffff #484e50 #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e #222222
client.urgent           #2f343a #900000 #ffffff #900000 #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000 #0c0c0c

# Custom defaults
for_window [class="^.*"] border pixel 1
for_window [instance="^.*_dropdown_.*$"] floating enable
for_window [instance="^.*_dropdown_.*$"] sticky enable

# gaps size
gaps inner 9

# i3blocks
set_from_resource $background color0
bar {
    font pango:monospace bold 10
    status_command i3blocks
    position top
    colors {
        background $background
    }
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# i3 specific bindings
# {{{

# fullscreen
bindsym $mod+f          fullscreen toggle
# kill
bindsym $mod+q          kill
bindsym $mod+Shift+q    exec "i3-nagbar -t warning -m 'Do you want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+y          layout stacking
bindsym $mod+shift+y    layout tabbed
bindsym $mod+u          split toggle
bindsym $mod+shift+u    layout toggle split
# focusing on child/parent
bindsym $mod+o          focus parent
bindsym $mod+Shift+o    focus child
# refreshing
bindsym $mod+i          reload
bindsym $mod+shift+i    restart
# change focus between tiling / floating windows
bindsym $mod+space          focus mode_toggle
# toggle tiling / floating
bindsym $mod+shift+space    floating toggle
# scratchpad
bindsym $mod+slash          move scratchpad
bindsym $mod+shift+slash    scratchpad show
bindsym $mod+comma          exec i3-msg sticky toggle

# }}}

# i3blocks signals
# {{{
set $mpd_signal     exec pkill -RTMIN+9  i3blocks
set $volume_signal  exec pkill -RTMIN+10 i3blocks
set $bright_signal  exec pkill -RTMIN+11 i3blocks
set $lang_signal    exec pkill -RTMIN+12 i3blocks
set $dict_signal    exec pkill -RTMIN+13 i3blocks

bindsym $mod+n                  $mpd_signal
bindsym $mod+Shift+n            $mpd_signal
bindsym $mod+equal              $mpd_signal
bindsym $mod+Shift+equal        $mpd_signal
bindsym $mod+minus              $mpd_signal
bindsym $mod+Shift+minus        $mpd_signal

bindsym XF86AudioMute           $volume_signal
bindsym XF86AudioLowerVolume    $volume_signal
bindsym XF86AudioRaiseVolume    $volume_signal

bindsym XF86MonBrightnessUp     $bright_signal
bindsym XF86MonBrightnessDown   $bright_signal

bindsym Caps_Lock               $lang_signal

bindsym $mod+bracketleft        $dict_signal
bindsym $mod+Shift+bracketleft  $dict_signal
bindsym $mod+bracketright       $dict_signal
bindsym $mod+Shift+bracketright $dict_signal
# }}}

# windows
# {{{
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# }}}

# workspaces
# {{{
# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Control+Left  workspace prev
bindsym $mod+Control+Right workspace next

bindsym $mod+Control+h     workspace prev
bindsym $mod+Control+l     workspace next
# }}}

# custom modes
# {{{
bindsym $mod+r          mode "resize"
bindsym $mod+Shift+r    mode "gaps"

mode "resize" {
    set $res1 5
    set $res2 1

    bindsym h resize shrink width $res1 px or $res1 ppt
    bindsym j resize grow height $res1 px or $res1 ppt
    bindsym k resize shrink height $res1 px or $res1 ppt
    bindsym l resize grow width $res1 px or $res1 ppt

    bindsym Left  resize shrink width $res1 px or $res1 ppt
    bindsym Down  resize grow height $res1 px or $res1 ppt
    bindsym Up    resize shrink height $res1 px or $res1 ppt
    bindsym Right resize grow width $res1 px or $res1 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

mode "gaps" {
    set $res1 5
    set $res2 1

    bindsym h gaps inner current minus $res1
    bindsym j gaps inner current minus $res2
    bindsym k gaps inner current plus $res2
    bindsym l gaps inner current plus $res1

    bindsym Left  gaps inner current minus $res1
    bindsym Down  gaps inner current minus $res2
    bindsym Up    gaps inner current plus $res2
    bindsym Right gaps inner current plus $res1

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
# }}}
